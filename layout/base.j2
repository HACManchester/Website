<html>
	<head>
  		{% block starthead %}{% endblock starthead %}
		<meta charset="{{ resource.meta.charset }}">
		<meta http-equiv="X-UA-Compatible" content="{{ resource.meta.compatibility }}">
		<title>{% block title %}{{ resource.meta.title }}{% if resource.meta.byline %} - {{resource.meta.byline}}{% endif %}{% endblock %}</title>
		<link rel="stylesheet" type="text/css" href="{{ media_url('css/hacman.css') }}"/>
		<link rel="stylesheet" type="text/css" href="{{ media_url('css/syntax.css') }}"/>
		<meta name="description" content="{{ resource.meta.description }}">
		<meta name="author" content="{{ resource.meta.author }}">
		{% block headjs %}
			<script src="{{ media_url('js/libs/modernizr-1.7.min.js') }}"></script>
		{% endblock headjs %}
		{% block endhead %}{% endblock endhead %}
	</head>
	<body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">
		<div id="main">
			<ul class="menu">
				<li><a href="/">Home</a></li>
				<li><a href="/about-us.html">About Us</a></li>
				<li><a href="/news/">News</a></li>
				<li><a href="/events/">Events</a></li>
				<li><a href="/projects/">Projects</a></li>
				<li><a href="http://wiki.hacman.org.uk">Wiki</a></li>
			</ul>
			<div id="right">
				{% block calender %}
				{% include "calender.j2" %}
				{% endblock calender %}
				<hr/>
				{% block contact %}
				{% include "contact.j2" %}
				{% endblock contact %}
				<hr/>
				{% block sponsors %}
				{% include "sponsors.j2" %}
				{% endblock sponsors %}
			</div>
			<div class="col2">
				{% block image %}
				<div class="banner" {% if resource.meta.image %} style="background-image:url({{ media_url(resource.meta.image) }})"{% endif %}>
					<h1>{{ resource.meta.title }}</h1>
					<h2>{{ resource.meta.byline }}</h1>
					{% block postinfo %}{% endblock %}
				</div>
				{% endblock image %}
				{% block blognav %}{% endblock %}
				{% filter markdown|typogrify -%}
				{% mark main -%}
				{% block main -%}{%- endblock %}
				{%- endmark %}
				{%- endfilter %}
			</div>
		</div>
		{% block js %}
		{% block jquery %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
			<script>window.jQuery || document.write('<script src="js/libs/jquery-1.5.1.min.js">\x3C/script>')</script>
		{% endblock jquery %}

		{% block scripts %}
		{% endblock scripts %}


		<!--[if lt IE 7 ]>
		<script src="js/libs/dd_belatedpng.js"></script>
		<script>DD_belatedPNG.fix('img, .png_bg'); // Fix any <img> or .png_bg bg-images. Also, please read goo.gl/mZiyb </script>
		<![endif]-->

		{% block analytics %}
		{% include "analytics.j2" %}
		{% endblock analytics %}

		{% endblock js %}
	</body>
</html>
